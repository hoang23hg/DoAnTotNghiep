<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_box"
    android:elevation="2dp"
    android:layout_marginBottom="8dp"
    >


        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: 1"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/txtReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Khách Hàng: Hoàng"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa Chỉ: Hà Giang"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số Điện Thoại: 0359652868"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Thanh Toán: $41"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Đặt Hàng: 2024-11-04 17:41:39"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/txtOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Đang xử lý"
            android:textStyle="italic"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnChiTiet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chi tiết đơn hàng"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#6A4FB6"
                    android:layout_marginEnd="8dp"
                    android:padding="10dp"
                    />

                <Button
                    android:id="@+id/btnHoanHang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hoàn hàng"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#6A4FB6"
                    android:padding="10dp"
                    />
        </LinearLayout>


</LinearLayout>
